<div class="container">
    <div class="row">
        <div class="col">
         <h1 class="mb-4 " style="margin-left: 450px; margin-top: 100px;">All Companies</h1>
         <a href="companies/new" class="btn btn-success">Add Company</a>
  
         <% companies.forEach(company => { %>
             <div class="card mt-4">
                 <div class="card-body">
                    <div class="card-subtitle text-muted mb-2">
                        <%= company.createdAt.toLocaleDateString() %>
                        
                    </div>
                     <h4 class="card-title" style="font-weight: 700;"><%= company.title %></h4>
                  
                     <div class="card-text mb-2"><%=company.description %></div>
                     <div class="card-text mb-2"><%=company.markdown%></div>
                     
                     <a href="companies/<%= company.slug %>" class="btn btn-primary float-right" >Read More</a>
                     <a href="companies/edit/<%= company.id %>" class="btn btn-info float-right" >Edit</a>
                     <form action="/companies/<%= company.id %>?_method=DELETE" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger float-right">Delete</button>
                                     
                  </form>
                 </div>
          
             </div>
         <% }) %>
        </div>
    </div>
    
</div>