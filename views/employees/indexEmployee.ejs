<div class="container">
    <div class="row">
        <div class="col">
         <h1 class="mb-4 " style="margin-left: 450px; margin-top: 100px;">All Employees</h1>
         <a href="employees/new" class="btn btn-success">Add employee</a>
  
         <% employees.forEach(employee => { %>
             <div class="card mt-4">
                 <div class="card-body">
                    <div class="card-subtitle text-muted mb-2">
                        <%= employee.createdAt.toLocaleDateString() %>
                        
                    </div>
                     <h4 class="card-title" style="font-weight: 700;">Employee Name:<%= employee.title %></h4>
                  
                     <div class="card-text mb-2">previous company:<%= employee.description %></div>
                     <div class="card-text mb-2">current comapny:<%= employee.markdown %></div>
                    
                     <a href="employees/edit/<%= employee.id %>" class="btn btn-info float-right" >Edit</a>
                     <form action="/employees/<%= employee.id %>?_method=DELETE" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger float-right">Delete</button>
                                     
                  </form>
                 </div>
          
             </div>
         <% }) %>
        </div>
    </div>
    
</div>