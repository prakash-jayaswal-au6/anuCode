  
<div class="form-group">
  <label for="title">Employee Name</label>
  <input required value="<%= employee.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
  <label for="description">Previous company</label>
  <textarea name="description" id="description" class="form-control"><%= employee.description %></textarea>
</div>

<div class="form-group">
  <label for="markdown">Current company</label>
  <textarea required name="markdown" id="markdown" class="form-control"><%= employee.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>